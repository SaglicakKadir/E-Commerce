@model ecommerce.Models.Product

@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
	int imageCount = Directory.GetFiles(Directory.GetCurrentDirectory() + "\\wwwroot\\Image\\", Model.ProductId.ToString() + "-*").Length;

}

<h1>Details</h1>

<div>
	<h4>Product</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ProductName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ProductName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ProductPrice)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ProductPrice)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Description)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ProductRate)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ProductRate)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Category)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Category.CategoryName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Brand)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Brand.BrandName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Seller)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Seller.SellerEmail)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.IsDeleted)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.IsDeleted)
		</dd>
		@for (byte i = 0; i < imageCount; i++)
		{
			string imagePath = "/Image/" + Model.ProductId.ToString() + "-" + i.ToString() + ".jpg";

			<img src="@imagePath" width="150" height="130" />

		}

	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.ProductId">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
