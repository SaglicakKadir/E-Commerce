<div class="row">
	<div class="col-75">
		<div class="container">
			<form action="/Payment/CheckOut">
				<div class="row">
					<div class="col-50">
						<h3>Kredi Kartı İle Ödeme</h3>
						<label for="fname"></label>
						<div class="icon-container">
							<i class="fa fa-cc-visa" style="color:navy;"></i>
							<i class="fa fa-cc-amex" style="color:blue;"></i>
							<i class="fa fa-cc-mastercard" style="color:red;"></i>
							<i class="fa fa-cc-discover" style="color:orange;"></i>
						</div>

						<label for="cardname">Kart Sahibi</label>
						<input type="text" id="cardname" name="cardname" placeholder="John More Doe" data-val="true" data-val-required="Bu alan boş geçilemez!" data-val-length="5 Harften Kısa Olamaz!" data-val-length-min="5">
						<span class="field-validation-valid" data-valmsg-for="cardname" data-valmsg-replace="true"></span>

						<label for="cardnumber">Kredi Kartı Numarası</label>
						<input type="text" id="cardnumber" name="cardnumber" placeholder="1111222233334444" data-val-number="Kredi Kartı Numarasını Doğru Giriniz" data-val="true" data-val-required="Bu alan boş geçilemez!" data-val-length="Kart Numarasını Doğru Giriniz!"  data-val-length-max="19"  data-val-length-min="13">
						<span class="field-validation-valid" data-valmsg-for="cardnumber" data-valmsg-replace="true"></span>

						<label for="expmonth">Ay</label>
						<select id="expmonth" name="expmonth">
							@for (byte i = 1; i < 13; i++)
							{
								<option value="@i">@i</option>
							}
						</select>
						<div class="row">
							<div class="col-50">
								<label for="expyear">Yıl</label>
								<select id="expyear" name="expyear">
									@for (int i = DateTime.Now.Year; i < DateTime.Now.Year + 10; i++)
									{
										<option value="@i">@i</option>
									}
								</select>
							</div>
							<div class="col-50">
								<label for="cvv">CVV</label>
								<input type="text" id="cvv" name="cvv" placeholder="352" data-val="true" data-val-number="Sayı Giriniz" data-val-required="Bu alan boş geçilemez!"data-val-length="3 Hane Olmalı!" data-val-length-min="3" data-val-length-max="3"> 
								<span class="field-validation-valid" data-valmsg-for="cvv" data-valmsg-replace="true"></span>
							</div>
						</div>
					</div>
				</div>
				<input type="submit" value="Ödeme Yap" class="btn" /> 
			</form>
		</div>
	</div>
</div>
